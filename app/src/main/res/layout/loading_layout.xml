<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/loading_view">

        <ProgressBar
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="@+id/loading_view"
                app:layout_constraintRight_toRightOf="@+id/loading_view"
                app:layout_constraintLeft_toLeftOf="@+id/loading_view"
                app:layout_constraintBottom_toTopOf="@+id/loading_message"
                android:id="@+id/progress_bar_list"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/progress_bar_list"
                app:layout_constraintRight_toRightOf="@+id/loading_view"
                app:layout_constraintLeft_toLeftOf="@+id/loading_view"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:id="@+id/loading_message"/>

</android.support.constraint.ConstraintLayout>
